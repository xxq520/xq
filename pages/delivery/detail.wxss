.container {
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
  /* background: #f5f5f9;  */
  font-size: 14px;
  overflow: hidden;
  min-height: 100vh;
  box-sizing: border-box;
}

.header {
  position: fixed;
  top: 0px;
  width: 100%;
  z-index: 2147483647;
}

.header:after {
  content: " ";
  position: absolute;
  top: -1px;
  left: 0;
  right: 0;
  height: 1px;
  border-bottom: 1rpx solid #b2b2b2;
  color: #d9d9d9;
}

.footer {
  width: 72%;
  position: fixed;
  bottom: 150px;
  left: 105rpx;
  z-index: 999;
}

.footer:after {
  content: " ";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 1px;
  border-top: 1rpx solid #d9d9d9;
  color: #d9d9d9;
}

.dialog-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  background: rgba(0, 0, 0, 0.6);
  display: none;
}

.dialog-container {
  position: fixed;
  width: 100%;
  left: 0;
  bottom: 0;
  z-index: 5000;
  background: white;
  transform: translateY(100%);
  transition: all 0.3s ease;
}

.dialog-mask-show .dialog-mask {
  display: block;
  animation: fadeIn ease 0.3s forwards;
}

.dialog-mask-show .dialog-container {
  transform: translateY(0);
}

.dialog-picker {
  width: 100%;
  height: 150px;
}

.dialog-button {
  position: relative;
  display: flex;
  padding: 9px 15px;
  font-size: 17px;
  border-bottom: 1rpx solid #d9d9d9;
}

.dialog-button-cancel {
  float: left;
  flex: 1;
  color: #888;
}

.dialog-button-ok {
  float: right;
